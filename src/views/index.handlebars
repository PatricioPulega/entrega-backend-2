<div class="box">
  <div class="view-cart">
    <a id="button-cart" class="button" href="/cart/{{cartId}}">Ver Carrito</a>
  </div>
  <h1>Productos</h1>
  <section class="products-box">
    {{#each products}}
      <article class="product-card">
        <h3>{{this.title}}</h3>
        <hr>
        <p>Categoria: {{this.category}}</p>
        <p>Descripci√≥n: {{this.description}}</p>
        <p>Precio: $ {{this.price}}</p>
        <button class="button-create" onclick="addToCart('{{this._id}}')">Agregar al Carrito</button>
      </article>
    {{/each}}
  </section>
  <div class="footer">
    {{#if prevLink.exist}}
      <a class="button" href="{{prevLink.link}}">Anterior</a>
    {{/if}}
    {{#if nextLink.exist}}
      <a class="button" href="{{nextLink.link}}">Siguiente</a>
    {{/if}}
  </div>
</div>

<script src="/js/ecommerce.js"></script>